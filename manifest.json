{
  "manifest_version": 3,
  "name": "기업마당 새 공고 요약 알리미",
  "description": "bizinfo.go.kr 지원사업 공고에 새 글이 올라오면 자동으로 요약해서 알려줍니다.",
  "version": "1.0.0",
  "action": {
    "default_title": "기업마당 새 공고 요약",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://www.bizinfo.go.kr/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}